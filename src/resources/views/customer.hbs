            <div>{{this.TenKH}}</div>
            <div>Số Điện Thoại: {{this.SoDienThoaiKH}}</div>
            <div>Số Tiền: {{this.SoTienTieuThuFormatted}}</div>
            <div>Số Lượng Sản Phẩm: {{this.SoSanPhamTieuThu}}</div>
            <div>
                <a href="khach-hang/{{this.TenKH}}" class="link-thong-tin-KH"> Xem thông tin</a>
            </div>
        </div>
        </div>
        {{/each}}
</body>
</html>
